{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "envid": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "eastus"
        },
        "networkInterfaceName": {
            "type": "string",
            "defaultValue": "dc1nic"
        },
        "networkSecurityGroupName": {
            "type": "string",
            "defaultValue": "dc1-nsg"
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "default"
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "yubi-vnet"
        },
        "publicIpAddressType": {
            "type": "string",
            "defaultValue": "Dynamic"
        },
        "publicIpAddressSku": {
            "type": "string",
            "defaultValue": "Basic"
        },
        "osDiskType": {
            "type": "string",
            "defaultValue": "Premium_LRS"
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_DS2_v2"
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "BadAdmin"
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "BadAdminPass123"
        },
        "diagnosticsStorageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS"
        },
        "diagnosticsStorageAccountKind": {
            "type": "string",
            "defaultValue": "Storage"
        },
        "nodeConfigurationName": {
            "type": "string",
            "defaultValue": "CertAuthConfig.localhost"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
              "description": "Path to the nested templates used in this deployment"
            },
            "defaultValue": "https://raw.githubusercontent.com/huzzeytech/az-deploy/master/"
        }
    },
    "variables": {
        "nsgId": "[resourceId(resourceGroup().name, 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]",
        "vnetId": "[resourceId(resourceGroup().name,'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]",
        "vmnic": "[concat(parameters('envid'), '-dcnic1')]",
        "clientnic": "[concat(parameters('envid'), '-clientnic1')]",
        "canic": "[concat(parameters('envid'), '-canic1')]",
        "vmpubipName": "[concat(parameters('envid'), '-dcip1')]",
        "clientpubipName": "[concat(parameters('envid'), '-clientip1')]",
        "capubipName": "[concat(parameters('envid'), '-caip1')]",
        "vmname": "[concat(parameters('envid'), '-dc1')]",
        "clientname": "[concat(parameters('envid'), '-client')]",
        "caname": "[concat(parameters('envid'), '-ca')]",
        "pubipId": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('vmpubipName'))]",
        "storageName": "[concat('sa', parameters('envid'))]",
        "scriptParameters": "[concat('-CustomDomain ', parameters('envid'))]",
        "scriptFileName": "init-domain.ps1",
        "dnsResourceGroup": "infra",
        "dnszones_yubi.fun_name": "yubi.fun",
        "domainname": "[concat(parameters('envid'), '-yubi.fun')]",
        "netbios": "[concat(parameters('envid'), '-yubi')]",
        "provisionConfigurationURL": "[uri(parameters('_artifactsLocation'), concat('nested/provisionConfiguration.json'))]",
        "automationAccountName": "yubi-test"
    },
    "resources": [
        {
            "name": "provisionConfiguration",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "infra",
            "apiVersion": "2018-05-01",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri": "[variables('provisionConfigurationURL')]",
                "contentVersion": "1.0.0.0"
              },
              "parameters": {
                "_artifactsLocation": {
                  "value": "[parameters('_artifactsLocation')]"
                },
                "automationAccountName": {
                  "value": "[variables('automationAccountName')]"
                },
                "adminUsername": {
                  "value": "[parameters('adminUsername')]"
                },
                "adminPassword": {
                  "value": "[parameters('adminPassword')]"
                },
                "domainName": {
                  "value": "[variables('netbios')]"
                },
                "location": {
                  "value": "[parameters('location')]"
                }
              }
            }
        }, 
        {
            "name": "[variables('vmnic')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('vmpubipName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "10.0.16.5",
                            "privateIPAllocationMethod": "Static",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('vmpubipName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('clientnic')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('clientpubipName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig2",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('clientpubipname'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                },
                "dnsSettings": {
                    "dnsServers": [
                      "10.0.16.5"
                    ],
                    "internalDnsNameLabel": "yubifun",
                    "internalFqdn": "[variables('domainname')]"
                }
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('canic')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]",
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', variables('capubipName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig3",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAddress": "10.0.16.10",
                            "privateIPAllocationMethod": "Static",
                            "publicIpAddress": {
                                "id": "[resourceId(resourceGroup().name, 'Microsoft.Network/publicIpAddresses', variables('capubipname'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                },
                "dnsSettings": {
                    "dnsServers": [
                      "10.0.16.5"
                    ]
                }
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[parameters('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "RDP",
                        "properties": {
                        "priority": 300,
                        "protocol": "Tcp",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourceAddressPrefix": "*",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*",
                        "destinationPortRange": "3389"
                    }
                }]
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.16.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.16.0/24"
                        }
                    }
                ]
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('vmpubipname')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
            },
            "sku": {
                "name": "[parameters('publicIpAddressSku')]"
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('clientpubipname')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
            },
            "sku": {
                "name": "[parameters('publicIpAddressSku')]"
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('capubipname')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
            },
            "sku": {
                "name": "[parameters('publicIpAddressSku')]"
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('vmname')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('vmnic'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('storageName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmnic'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "dc1",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('storageName'), '.blob.core.windows.net/')]"
                    }
                }
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('clientname')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('clientnic'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('storageName'))]",
                "[concat('Microsoft.Compute/virtualMachines/', variables('vmname'), '/extensions/createdomain')]"
            ],   
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsDesktop",
                        "offer": "Windows-10",
                        "sku": "rs5-pro",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('clientnic'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "client1",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('storageName'), '.blob.core.windows.net/')]"
                    }
                }
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('caname')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('canic'))]",
                "[concat('Microsoft.Storage/storageAccounts/', variables('storageName'))]"],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('canic'))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "ca1",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVmAgent": true
                    }
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('storageName'), '.blob.core.windows.net/')]"
                    }
                }
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "name": "[variables('storageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2018-07-01",
            "location": "[parameters('location')]",
            "properties": {},
            "kind": "[parameters('diagnosticsStorageAccountKind')]",
            "sku": {
                "name": "[parameters('diagnosticsStorageAccountType')]"
            },
            "tags": {
                "Project": "yubi-azure"
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "dnsTemplate",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[variables('dnsResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {
                            "name": "[concat(variables('dnszones_yubi.fun_name'),'/', parameters('envid'))]",
                            "type": "Microsoft.Network/dnsZones/A",
                            "apiVersion": "2018-05-01",
                            "properties": {
                                "metadata": {},
                                "TTL": 3600,
                                "targetResource": {
                                    "id": "[variables('pubipId')]"
                                }
                            }
                        }
                    ]
                }
            },
            "dependsOn": [
                "[variables('vmname')]",
                "[variables('vmpubipname')]"
            ]
        },
        {
            "apiVersion": "2018-06-01",
            "name": "[concat(variables('vmname'), '/createdomain')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('vmname'))]"
            ],
            "tags": {
                "displayName": "initialize-dc"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.9",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/huzzeytech/az-deploy/master/scripts/init-domain.ps1"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('scriptFileName'), ' ', variables('scriptParameters'))]"
                }
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('caname'), '/joindomain')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('clientname'))]",
                "[concat('Microsoft.Compute/virtualMachines/', variables('vmname'), '/extensions/createdomain')]"
            ],
            "properties": {
              "publisher": "Microsoft.Compute",
              "type": "JsonADDomainExtension",
              "typeHandlerVersion": "1.3",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "Name": "[variables('domainname')]",
                "User": "[concat(variables('netbios'), '\\', parameters('adminUsername'))]",
                "Restart": "true",
                "Options": "3"
              },
              "protectedSettings": {
                "Password": "[parameters('adminPassword')]"
              }
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('clientname'), '/joindomain')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('caname'), '/extensions/joindomain')]"
            ],
            "properties": {
              "publisher": "Microsoft.Compute",
              "type": "JsonADDomainExtension",
              "typeHandlerVersion": "1.3",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "Name": "[variables('domainname')]",
                "OUPath": "",
                "User": "[concat(variables('domainname'), '\\', parameters('adminUsername'))]",
                "Restart": "true",
                "Options": "3"
              },
              "protectedSettings": {
                "Password": "[parameters('adminPassword')]"
              }
            }
          },
          {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('caname'),'/OnboardToDSC')]",
            "apiVersion": "2017-12-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('caname'), '/extensions/joindomain')]"              
            ],
            "properties": {
              "publisher": "Microsoft.Powershell",
              "type": "DSC",
              "typeHandlerVersion": "2.75",
              "autoUpgradeMinorVersion": true,
              "protectedSettings": {
                "Items": {
                  "registrationKeyPrivate": "[listKeys('/subscriptions/5c134fa3-e537-4bb7-9857-6f3cad39a5cb/resourceGroups/infra/providers/Microsoft.Automation/automationAccounts/yubi-test', '2018-01-15').Keys[0].value]"
                }
              },
              "settings": {
                "Properties": [
                  {
                    "Name": "RegistrationKey",
                    "Value": {
                      "UserName": "PLACEHOLDER_DONOTUSE",
                      "Password": "PrivateSettingsRef:registrationKeyPrivate"
                    },
                    "TypeName": "System.Management.Automation.PSCredential"
                  },
                  {
                    "Name": "RegistrationUrl",
                    "Value": "[reference('/subscriptions/5c134fa3-e537-4bb7-9857-6f3cad39a5cb/resourceGroups/infra/providers/Microsoft.Automation/automationAccounts/yubi-test', '2018-01-15').registrationUrl]",
                    "TypeName": "System.String"
                  },
                  {
                    "Name": "NodeConfigurationName",
                    "Value": "[parameters('nodeConfigurationName')]",
                    "TypeName": "System.String"
                  },
                  {
                    "Name": "ConfigurationMode",
                    "Value": "ApplyandAutoCorrect",
                    "TypeName": "System.String"
                  },
                  {
                    "Name": "RebootNodeIfNeeded",
                    "Value": true,
                    "TypeName": "System.Boolean"
                  },
                  {
                    "Name": "ActionAfterReboot",
                    "Value": "ContinueConfiguration",
                    "TypeName": "System.String"
                  }
                ]
              }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}