{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "_artifactsLocation": {
        "type": "string"
      },
      "automationAccountName": {
        "type": "string"
      },
      "location": {
        "type": "string"
      },
      "adminUsername": {
        "type": "string"
      },
      "adminPassword": {
        "type": "securestring"
      },
      "domainName": {
        "type": "string"
      }
    },
    "variables": {
      "dscConfigurations": {
        "CertAuthConfig": {
          "name": "CertAuthConfig",
          "description": "minimum viable configuration for a domain controller role",
          "script": "dscConfigurations/CertAuthConfig.ps1"
        }
      },
      "credUN": "[concat(parameters('adminUsername'), '@', parameters('domainName'))]",
      "credName": "[concat(parameters('automationAccountName'), '/', parameters('domainName'))]",
      "compilename": "[concat('compile-', parameters('domainName'))]"
    },
    "resources": [
      {
        "name": "[concat(parameters('automationAccountName'), '/', variables('dscConfigurations').CertAuthConfig.name)]",
        "type": "Microsoft.Automation/automationAccounts/configurations",
        "apiVersion": "2015-10-31",
        "location": "[parameters('location')]",
        "properties": {
          "state": "Published",
          "overwrite": "true",
          "source": {
            "type": "uri",
            "value": "[concat(parameters('_artifactsLocation'), variables('dscConfigurations').CertAuthConfig.script)]"
          }
        }
      },
      {
        "name": "[concat(parameters('automationAccountName'), '/', variables('compilename'))]",
        "type": "Microsoft.Automation/automationAccounts/compilationjobs",
        "apiVersion": "2018-01-15",
        "tags": {},
        "dependsOn": [
          "[concat('Microsoft.Automation/automationAccounts/yubi-auto/credentials/', parameters('domainName'))]"
        ],
        "properties": {
          "configuration": {
            "name": "[variables('dscConfigurations').CertAuthConfig.name]"
          },
          "parameters": {
            "configurationData": "[concat('{\"AllNodes\":{\"nodename\":\"localhost\",\"credname\":\"', parameters('domainName'), '\",\"PSDscAllowPlainTextPassword\":\"$True\"}}')]"
          }
        }
      },
      {
        "name": "[variables('credName')]",
        "type": "Microsoft.Automation/automationAccounts/credentials",
        "apiVersion": "2015-10-31",
        "properties": {
          "userName": "[variables('credUN')]",
          "password": "[parameters('adminPassword')]",
          "description": "Elevated Credential"
        }
      }
    ],
    "outputs": {}
  }